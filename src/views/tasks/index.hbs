<div class="max-w-7xl mx-auto sm:px-6 lg:px-8">
  <div class="bg-white overflow-hidden shadow-xl sm:rounded-lg mt-12">

    <table class="table-fixed w-full">
      <thead>
        <tr class="bg-black text-white">
          <th class="w-20 py-4 ...">Cedula</th>
          <th class="w-28 py-4 ...">Nombre</th>
          <th class="w-28 py-4 ...">Apellidos</th>
          <th class="w-28 py-4 ...">Correo</th>
          <th class="w-28 py-4 ...">Dirección</th>
          <th class="w-28 py-4 ...">Dias</th>
          <th class="w-28 py-4 ...">Cargo</th>
          <th class="w-28 py-4 ...">Acciones</th>
        </tr>
      </thead>
      <tbody>
        {{#each tasks}}
        <tr>
          <td class="py-3 px-6">{{cedula}}</td>
          <td class="p-3">{{nombre}}</td>
          <td class="p-3 text-center">{{Apellidos}}</td>
          <td class="p-3 text-center">{{Correo}}</td>
          <td class="p-3 text-center">{{Dirección}}</td>
          <td class="p-3 text-center">{{dias_iddias}}</td>
          <td class="p-3 text-center">{{cargo_idcargo}}</td>
          <td class="p-3 flex">
            <form action="/tasks/delete" method="POST" class="mx-2">
              <input type="hidden" value="{{cedula}}" name="id">
              <button class="bg-red-500 text-white px-3 py-1 rounded-sm" type="submit">
                <i class="fas fa-trash"></i></button>
            </form>
            <a href="/tasks/edit/{{cedula}}" class="bg-green-500 text-white px-3 py-1 rounded-sm">
              <i class="fas fa-pen"></i></a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>